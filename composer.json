{
    "name": "foodcoopshop/fcs-installer",
    "description": "Installs the FoodCoopShop open source software for your foodcoop",
    "homepage": "https://www.foodcoopshop.com",
    "license": "MIT",
    "authors": [
        {
            "name": "FoodCoopShop Community",
            "homepage": "https://github.com/foodcoopshop/foodcoopshop/graphs/contributors"
        }
    ],
    "require": {
        "php": ">=5.4.7"
    },
    "require-dev": {
        "clue/phar-composer": "*",
        "squizlabs/php_codesniffer": "2.*"
    },
    "config": {
        "vendor-dir": "Vendor"
    },
    "scripts": {
        "post-install-cmd": [
            "bash devtools/setup-git.sh"
        ],
        "post-update-cmd": [
            "bash devtools/setup-git.sh"
        ]
    }
}
